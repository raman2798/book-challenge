{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": ["airbnb-base", "plugin:security/recommended", "plugin:prettier/recommended"],
  "plugins": ["security", "prettier"],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "no-console": "error",
    "func-names": 0,
    "no-underscore-dangle": 0,
    "object-shorthand": 0,
    "consistent-return": 0,
    "security/detect-object-injection": 0,
    "no-throw-literal": 0,
    "no-await-in-loop": 0,
    "no-restricted-syntax": 0
  }
}
